    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Rust",
            "cargo": {
                "args": [
                    "build",
                    "--bin=AoC",
                    "--package=AoC"
                ],
                "filter": {
                    "name": "AoC",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: util.py",
            "type": "python",
            "program": "${workspaceFolder}/util.py",
            "request": "launch",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: main.py",
            "type": "python",
            "program": "${workspaceFolder}/main.py",
            "request": "launch",
            "console": "integratedTerminal"
        }
    ]
}